#to do app
task_list=[]

def add_task():
    task=input("enter the task: ")
    task_list.append(task)
def remove_task():
    rem_task=input("enter the task to remove:")
    if rem_task in task_list:
        task_list.remove(rem_task)
    else:
        print("task doesnt exist")
def view_task():
    print(task_list)

while True:
    print("\nTO-DO LIST APP USING PYTHON\n")
    print("\n")
    print("Main Menu")
    print("1.Add Task")
    print("2.View Task")
    print("3.Remove Task")
    print("4.Exit")
    ch=int(input("Enter your choice:"))
    if ch==1:
        add_task()
    elif ch==2:
        view_task()
    elif ch==3:
        remove_task()
    elif ch==4:
        break
    else:
        print("Invalid Choice,Try Again")
